{
    "files.eol": "\n",
    // Prevent MDX throwing false alarms when brackets are used textually
    "mdx.validate.validateReferences": "ignore",
    "mdx.validate.validateFileLinks": "ignore",
    "[markdown]": {
        "editor.wordWrap": "on"
    },
    "[mdx]": {
        "editor.wordWrap": "on"
    }
}
